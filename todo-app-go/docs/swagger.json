        "/api/todos": {
            "get": {
                "description": "DBに登録されているすべてのTodoをリストで取得する",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "todos"
                ],
